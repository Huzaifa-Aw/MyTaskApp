<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="mywork.ishatechnohub.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:mywork.ishatechnohub.Views"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Todo">
            <ShellContent ContentTemplate="{DataTemplate views:TodosPage}" />
        </Tab>
        <Tab Title="Tasks">
            <ShellContent ContentTemplate="{DataTemplate views:TasksPage}" />
        </Tab>
        <Tab Title="Projects">
            <ShellContent ContentTemplate="{DataTemplate views:ProjectsPage}" />
        </Tab>
    </TabBar>
</Shell>
